<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
				<xs:simpleType name="date">
								<xs:restriction base="xs:date">
												<xs:pattern value=".+(Z|[+-].{5})" id="TZ-pattern"/>
								</xs:restriction>
				</xs:simpleType>
				<xs:element name="myDate" type="myDate"/>
</xs:schema>
